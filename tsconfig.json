{
    "compilerOptions": {
      "alwaysStrict": true,
      "inlineSources": true,

      "inlineSourceMap": true,
      "strictNullChecks": true,

      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "lib": [
        "esnext"
      ],
      "paths": {
          "*": [
              "src/types/*"
          ]
      },
      "experimentalDecorators": true,
    },
    "include": [
      "config/**/*",
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "build",
      "glupfile.ts"
    ]
}
